# Database Configuration
DATABASE_URL="postgresql://village:village_dev_password@localhost:5432/village_db"
# Alternative for quick setup: DATABASE_URL="file:./dev.db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Stripe Payment Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# PayPal Configuration
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"
PAYPAL_ENVIRONMENT="sandbox"

# AWS Configuration (Optimized for existing Moto server on port 5001)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="testing"
AWS_SECRET_ACCESS_KEY="testing"
AWS_BUCKET_NAME="village-uploads"

# Moto Configuration (Your existing server)
USE_MOTO="true"
MOTO_ENDPOINT="http://localhost:5001"
MOTO_S3_ENDPOINT="http://localhost:5001"
MOTO_SES_ENDPOINT="http://localhost:5001"

# Email Service Configuration (via Moto SES)
EMAIL_FROM="noreply@village.com"
EMAIL_ADMIN="admin@village.com"
USE_SES="true"

# Application Configuration
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:3000"
MOBILE_URL="http://localhost:19006"
API_VERSION="v1"

# Business Configuration
REGISTRATION_FEE=25.00
TRANSACTION_FEE_PERCENTAGE=0.03
MAX_FUNDING_GOAL=50000
MIN_DONATION_AMOUNT=5

# File Upload Configuration (optimized for development)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf,doc,docx"
UPLOAD_DEST="uploads"

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET="your-session-secret"
BCRYPT_ROUNDS=10

# Logging Configuration
LOG_LEVEL="debug"
LOG_FILE="logs/village.log"
DEBUG_AWS="true"

# Development Features
ENABLE_API_DOCS="true"
ENABLE_CORS="true"
ENABLE_REQUEST_LOGGING="true"

# Moto Development Notes
# Your Moto server handles:
# - S3 file uploads and storage
# - SES email sending simulation
# - No real AWS charges during development
# - Instant setup without AWS account
