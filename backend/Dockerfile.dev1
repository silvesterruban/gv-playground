FROM node:18-slim

WORKDIR /app

# Install build tools and curl (essential for bcrypt and health check)
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    python3 \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/* \
    || echo "Package installation failed, continuing..."

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install dependencies (including dev dependencies for TypeScript)
RUN npm ci || npm install || echo "npm install failed, continuing..."

# Remove any existing bcrypt installation and rebuild it properly
RUN rm -rf node_modules/bcrypt && \
    rm -rf node_modules/.cache && \
    npm install bcrypt --build-from-source || \
    npm install bcrypt || \
    echo "bcrypt installation failed, continuing..."

# Remove macOS metadata files that might have been copied
RUN find /app -name "._*" -delete || echo "No macOS metadata files found"

# Clean npm cache
RUN npm cache clean --force || echo "npm cache clean failed, continuing..."

# Generate Prisma client
RUN npx prisma generate || echo "Prisma generation failed, continuing..."

# Copy source code
COPY . .

# Remove any macOS metadata files that might have been copied with source code
RUN find /app -name "._*" -delete || echo "No macOS metadata files found"

# Try to build TypeScript, but continue if it fails
RUN npm run build || echo "Build failed, will try to run anyway"

# Create logs directory
RUN mkdir -p logs

EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
  CMD curl -f http://localhost:3001/health || exit 1

# Development command (runs with npm start)
CMD ["npm", "start"] 