# GV Playground Backend Environment Configuration

# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://gvplayground:gvplayground_dev_password@localhost:5432/gvplayground_db"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# S3 Configuration (for production)
S3_BUCKET_NAME=gv-playground-storage

# Email Configuration (for production)
SES_REGION=us-east-1
SES_ACCESS_KEY_ID=your-ses-access-key
SES_SECRET_ACCESS_KEY=your-ses-secret-key
EMAIL_FROM=noreply@gvplayground.com

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development
USE_MOTO=false
MOTO_ENDPOINT=http://localhost:5001